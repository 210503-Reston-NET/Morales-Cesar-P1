@model IEnumerable<WebUI.Models.ProductVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.productname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productprice)
                </td>

            </tr>
        }
    </tbody>
    @Html.ActionLink("Back to Home Menu", "Index", "Home") | @Html.ActionLink("Back to Manager Menu", "Index", "Manager")

</table>
