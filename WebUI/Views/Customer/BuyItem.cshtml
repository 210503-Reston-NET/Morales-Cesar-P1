@model WebUI.Models.LineItemVM

@{
    ViewData["Title"] = "BuyItem";
}

<h1>BuyItem</h1>

<div>
    <h4>LineItemVM</h4>
    <h6>Just Placed order in basket</h6>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.itemID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.itemID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.orderID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.orderID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.productID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.productID)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Back To Order Screen", "OrderStoreItem2", new { cust = ViewBag.Customer.ID, store = ViewBag.Storefront.storeID, orde = ViewBag.Order.IDs}) 
</div>
