@model IEnumerable<WebUI.Models.CustomerVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Customer List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hometown)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hometown)
                </td>
                <td>
                    @Html.ActionLink("Place Order", "OrderItemStore", new { cust=item.id }) |
                    @Html.ActionLink("View Orders", "Index", "Order", new { id = item.id })
                </td>
            </tr>
        }
        @Html.ActionLink("Back to Home Menu", "Index", "Home")
    </tbody>
</table>
@Html.ActionLink("Back to Home Menu", "Index", "Home")
