@model IEnumerable<WebUI.Models.ProductVM>

@{
    ViewData["Title"] = "ReplenishInventoryProduct";
}

<h1>Select Store</h1>
<h1>@ViewBag.Storefront.Town</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.productname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.productprice)
                </td>
                <td>
                    @Html.ActionLink("Update Inventory", "UpdateInventory", new { store = ViewBag.Storefront.storeID ,prods = item.productcode })

                </td>
            </tr>
        }
    </tbody>
    @Html.ActionLink("Back to Manager Menu", "Index")
</table>
@Html.ActionLink("Back to Manager Menu", "Index")
